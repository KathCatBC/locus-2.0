<!-- educators\student-data.handlebars -->
{{> nav/loggedineducator}}

<h1>Student Data</h1>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>{{data.student.username}}</h3>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th><b>Title</b></th>
            <th><b>Document</b></th>
            <th><b>Description</b></th>
            <th><b>Date</b></th>
          </tr>
        </thead>
		    <tbody>
		    	{{#each data.notes}}
			      <tr>
			        <td>{{title}}</td>
			        <td><a href="{{doclink}}"><span class="glyphicon glyphicon-{{doctype}}"></span></a></td>
              <td>{{description}}</td>
			        <td>{{notedate}}</td>
			      </tr>
		      {{/each}}
		    </tbody>
		  </table> 
		</div>
	</div>
</div>