    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
        <h3>Field Notes</h3>

      <!-- </div> -->
     
        <div class="col-md-4 col-md-offset-6">
          <div class="input-group">
            <div class="input-group-btn search-panel">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                <span id="search_concept">Sort by</span> <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                <li class='sub' >
                  <a tabindex="-1" >Contributer<span class="caret"></span></a>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Ascending</a></li>
                    <li><a href="#">Descending</a></li>
                  </ul>
                </li>


                <li class='sub' >
                  <a tabindex="-1" >Date<span class="caret"></span></a>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Ascending</a></li>
                    <li><a href="#">Descending</a></li>
                  </ul>
                </li>  

                 <li><a href="#">Document Type</a></li>
              </ul>
            </div>
          </div> 
        </div>
    </div>
  </div>



      <div class="panel-body">
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>Contributor</th>
              <th>Link</th>
              <th>Title</th>
              <th>Description</th>
              <th>Date</th>
               <th> </th>
            </tr>
          </thead>
          <tbody>
          {{#each data}}
             

              <tr>
              <td>{{this.Student.username}}</td>
              <td><a href="{{doclink}}"><span class="glyphicon glyphicon-{{doctype}}"></span></a></td>
              <td> {{this.title}}</td>
              <td> {{this.description}}</td>
              <td> {{notedate}}</td>
               <td> 

                 {{#if this.showDeleteBtn}}
                 <form action="/notes/delete/{{this.id}}" method="GET">
                  
                     <button type="submit">Delete</button>
                   </form>
                  {{/if}}
            
                </td>
            </tr>
          {{/each}}
         
            
          </tbody>
        </table> 

      </div>
    </div>
