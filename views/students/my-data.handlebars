<!-- students\mydata.handlebars -->
{{> nav/loggedinstudent}}
<div class="container">
  
  </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>My Data</h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>Project</th>
              <th>Link</th>
              <th>Title</th>
              <th>Description</th>
              <th>Date</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          {{#each observations}}
            <tr>
              <td>{{Project.name}}</td>
              <td> <a href="/notes/fieldnote/{{this.id}}/{{doctype}}"><span class="glyphicon glyphicon-{{doctype}}"></span></a></td>
             
              <td>{{title}}</td>
              <td>{{description}}</td>
              <td>{{notedate}}</td>
              <td>
               {{#if this.showDeleteBtn}}
                 <form action="/student/delete/{{this.id}}" method="GET">
                  
                     <button type="submit">Delete</button>
                   </form>
                  {{/if}}
                </td>
            </tr>
		      {{/each}}
          </tbody>
        </table> 

      </div>
    </div>

</div>






